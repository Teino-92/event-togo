<h1 class="text-3xl font-bold mb-6">My Plans</h1>

<div class="box my-5">
  <% if @plans.any? %>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <% @plans.each do |plan| %>
        <div class="col">
          <div class="card h-900 shadow-sm border-0 rounded-lg">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title text-xl font-semibold mb-3"><%= plan.title %></h5>
              <p class="text-gray-700 mb-2"><strong>Theme:</strong> <%= plan.theme %></p>
              <p class="text-gray-700 mb-2"><strong>Date:</strong>
                <%= plan.roadmap_date.present? ? plan.roadmap_date.strftime("%d %B %Y") : "Not set" %>
              </p>
              <!-- Wrapper pour centrer le bouton -->
              <div class="mt-auto d-flex justify-content-center">
                <%= link_to "View plan", plan_path(plan),
                      class: "btn btn-primary btn-sm px-3 rounded-pill" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-600">You haven't created any plan yet.</p>
  <% end %>
</div>
