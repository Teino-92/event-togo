<div class="box">
  <h1>My Roadmaps</h1>

  <% if @plans.any? %>
    <div style="margin-top: 20px;">
      <% @plans.each do |plan| %>
        <div class="card-plan m-3" style="display: flex; justify-content: space-between; align-items: center;">
          <%= link_to plan_path(plan), style: "text-decoration: none; color: inherit; flex: 1;" do %>
            <div style="display: flex; flex-direction: column; text-align: left;">
              <h5 style="margin: 0; color: #FB2576; font-size: 20px;"><%= plan.title %></h5>
              <p style="margin: 8px 0 0 0; color: #3F0071; font-size: 14px;">
                <strong><%= plan.roadmap_date&.strftime("%B %d, %Y") %></strong> â€¢ <%= plan.city %>
              </p>
              <% if plan.theme.present? %>
                <p style="margin: 4px 0 0 0; color: #150050; font-size: 12px;">
                  <i class="fas fa-tag"></i> <%= plan.theme %>
                </p>
              <% end %>
            </div>
          <% end %>

          <%= button_to plan_path(plan),
            method: :delete,
            class: "button-box button-delete button-small button-icon",
            data: { turbo_confirm: "Are you sure you want to delete this plan?" },
            form: { style: "margin: 0;" } do %>
            <i class="fas fa-trash"></i>
            <span>Delete</span>
          <% end %>
        </div>
      <% end %>
    </div>

    <div style="text-align: center; margin-top: 30px;">
      <%= link_to new_plan_path, class: "button-box button-secondary" do %>
        <i class="fas fa-plus"></i>&nbsp; Create New Plan
      <% end %>
    </div>
  <% else %>
    <div style="text-align: center; margin-top: 40px;">
      <p style="font-size: 18px; color: #3F0071; margin-bottom: 30px;">You haven't saved any roadmap yet.</p>
      <%= link_to new_plan_path, class: "button-box" do %>
        <i class="fas fa-plus"></i>&nbsp; Create Your First Plan
      <% end %>
    </div>
  <% end %>
</div>
