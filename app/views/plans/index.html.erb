<div class="box">
  <h1>My Roadmaps</h1>

  <% if @plans.any? %>
    <% @plans.each do |plan| %>
      <%= link_to plan_path(plan), class: "card-plan m-3", style: "display: block; text-decoration: none; color: inherit;" do %>
        <div style="display: flex; flex-direction: column; text-align: left;">
          <h5><%= plan.title %></h5>
          <p><strong><%= plan.roadmap_date %> </strong> - <%= plan.city %></p>
        </div>
      <% end %>
    <% end %>
  <% else %>
    <p>You haven't saved any roadmap yet.</p>
  <% end %>
</div>
