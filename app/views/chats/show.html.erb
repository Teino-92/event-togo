
<%= link_to "← #{@chat.plan.title}", plan_path(@chat.plan) %>

<div class="chat_box">
  <!-- ✅ ✅ ROADMAP AFFICHÉ EN TEXTE (SANS JSON) -->
  <% if @roadmap_json.present? %>
    <div>

      <h2><%= @roadmap_json["title"] %></h2>
      <p>
        Estimated budget: <%= @roadmap_json["pricing"] %>
      </p>

      <% @roadmap_json["roadmap"].each do |step| %>
        <div>
          <h3>
            <%= step["time"] %> – <%= step["title"] %>
          </h3>

          <p>
            <%= step["description"] %>
          </p>

          <ul>
            <% step["options"].each do |opt| %>
              <li><%= opt %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= button_to "Save Roadmap",
              save_roadmap_plan_path(@plan),
              method: :post,
              class: "button-box" %>
      </div>

    </div>
  <% end %>

  <!-- ✅ FORMULAIRE CHAT -->
  <div id="new_message_container">
    <%= simple_form_for [@chat, @message] do |f| %>
      <%= f.input :content, label: "Ask a question", required: true, placeholder: "" %>
      <%= f.button :submit, 'Ask AI', class: 'button-box' %>
    <% end %>
  </div>
</div>
