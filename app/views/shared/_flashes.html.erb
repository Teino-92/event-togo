<div id="flash" data-controller="flash">
  <% if notice %>
    <div class="flash-message flash-success" data-flash-target="message" data-action="click->flash#dismiss" role="alert">
      <div class="flash-icon">
        <i class="fas fa-check-circle"></i>
      </div>
      <div class="flash-content">
        <strong>Success!</strong>
        <p><%= notice %></p>
      </div>
      <button type="button" class="flash-close" data-action="click->flash#dismiss" aria-label="Close">
        <i class="fas fa-times"></i>
      </button>
    </div>
  <% end %>
  <% if alert %>
    <div class="flash-message flash-warning" data-flash-target="message" data-action="click->flash#dismiss" role="alert">
      <div class="flash-icon">
        <i class="fas fa-exclamation-triangle"></i>
      </div>
      <div class="flash-content">
        <strong>Warning!</strong>
        <p><%= alert %></p>
      </div>
      <button type="button" class="flash-close" data-action="click->flash#dismiss" aria-label="Close">
        <i class="fas fa-times"></i>
      </button>
    </div>
  <% end %>
</div>
